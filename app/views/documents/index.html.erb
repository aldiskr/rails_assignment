<nav class="navbar">
  <%= link_to 'Jauns dokuments', new_document_path, class: 'btn btn-primary' %>
</nav>
<table class="table table-striped">
  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= link_to document.title, document_path(document) %></td>
        <td><%= document.description.truncate(30) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
